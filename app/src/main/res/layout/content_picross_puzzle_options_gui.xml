<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow><TextView android:text=" " /></TableRow>
        <TableRow><TextView android:text=" " /></TableRow>
        <TableRow><TextView android:text=" " /></TableRow>
        <TableRow android:layout_height="match_parent" android:layout_width="match_parent">
            <ImageView
                android:id="@+id/previewImage"
                android:layout_span="5"
                android:contentDescription="Preview Image" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Threshold:"
                android:id="@+id/textView9"
                android:layout_column="1"
                android:paddingLeft="20px" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectThreshold"
                android:layout_column="2"
                android:max="255"
                android:minWidth="200dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayThreshold"
                android:layout_column="3"
                android:text="000"/>
        </TableRow>
        <TableRow><TextView android:text=" " /></TableRow>
        <TableRow><TextView android:text=" " /></TableRow>
        <TableRow><TextView android:text=" " /></TableRow>
        <TableRow><Button android:id="@+id/previewButton" android:text="Preview" android:layout_span="5"/></TableRow>
        <TableRow><Button android:id="@+id/generateButton" android:text="Generate" android:layout_span="5"/></TableRow>
    </TableLayout>
</ScrollView>