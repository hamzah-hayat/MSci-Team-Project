<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/timed">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maze_type"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="#D4ADDC"
        android:gravity="center" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/maze_height"
        android:layout_below="@+id/maze_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/picross_height"
        android:hint="Height"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:gravity="center"
        android:textStyle="bold" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/maze_weight"
        android:background="@drawable/picross_height"
        android:hint="Weight"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignTop="@+id/maze_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Timed"
        android:id="@+id/timed_checkbox"
        android:background="#50E3C2"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:singleLine="false"
        android:layout_above="@+id/minutes"
        android:layout_alignLeft="@+id/maze_height"
        android:layout_alignStart="@+id/maze_height"
        android:layout_marginBottom="36dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/minutes"
        android:layout_marginBottom="95dp"
        android:background="@drawable/maze_mins_seconds"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/timed_checkbox"
        android:layout_alignStart="@+id/timed_checkbox"
        android:hint="Minutes"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:textStyle="bold" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/seconds"
        android:background="@drawable/maze_mins_seconds"
        android:layout_alignBottom="@+id/minutes"
        android:layout_alignRight="@+id/maze_weight"
        android:layout_alignEnd="@+id/maze_weight"
        android:textColorHint="#ffffffff"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:hint="Seconds"
        android:gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maze_play"
        android:layout_below="@+id/seconds"
        android:layout_centerHorizontal="true"
        android:src="@drawable/picross_play_button"
        android:background="#ffffffff" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/timed_checkbox"
        android:layout_alignStart="@+id/timed_checkbox"
        android:background="@drawable/maze_mins_seconds"
        android:hint="Enter the number of planes..."
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff" />

</RelativeLayout>