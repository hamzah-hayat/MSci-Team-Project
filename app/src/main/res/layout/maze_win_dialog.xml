<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maze_win"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/maze_win" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maze_next"
        android:layout_marginBottom="43dp"
        android:src="@drawable/win_next"
        android:background="#B5C7DD"
        android:layout_marginRight="36dp"
        android:layout_alignBottom="@+id/maze_win"
        android:layout_alignRight="@+id/maze_win"
        android:layout_alignEnd="@+id/maze_win"
        android:layout_marginEnd="36dp" />
</RelativeLayout>