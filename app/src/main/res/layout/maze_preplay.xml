<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/timed">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maze_types_dd"
        android:background="#D4ADDC"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/height_field"
        android:layout_below="@+id/maze_types_dd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/picross_height"
        android:hint="Height"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:gravity="center"
        android:textStyle="bold" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/width_field"
        android:background="@drawable/picross_height"
        android:hint="Weight"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignTop="@+id/height_field"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Timed"
        android:id="@+id/time_check_box"
        android:background="#50E3C2"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:singleLine="false"
        android:layout_above="@+id/minutes_field"
        android:layout_alignLeft="@+id/plane_no_field"
        android:layout_alignStart="@+id/plane_no_field"
        android:checked="false" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/minutes_field"
        android:background="@drawable/maze_mins_seconds"
        android:hint="Minutes"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:textStyle="bold"
        android:layout_above="@+id/start_button"
        android:layout_alignLeft="@+id/time_check_box"
        android:layout_alignStart="@+id/time_check_box" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/seconds_field"
        android:background="@drawable/maze_mins_seconds"
        android:textColorHint="#ffffffff"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:hint="Seconds"
        android:gravity="center"
        android:layout_above="@+id/start_button"
        android:layout_alignLeft="@+id/width_field"
        android:layout_alignStart="@+id/width_field" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_button"
        android:src="@drawable/picross_play_button"
        android:background="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/plane_no_field"
        android:background="@drawable/maze_mins_seconds"
        android:hint="Enter the number of planes..."
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:layout_below="@+id/height_field"
        android:layout_alignLeft="@+id/height_field"
        android:layout_alignStart="@+id/height_field" />

</RelativeLayout>