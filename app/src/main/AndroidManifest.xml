<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group.msci.puzzlegenerator">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".maze.MazeController"
            android:label="@string/app_name" />
        <activity
            android:name=".maze.MazeWallController"
            android:label="@string/app_name" />
        <activity
            android:name=".maze.subviews.GameInstanceController"
            android:label="@string/app_name" />
        <activity
            android:name=".picross.PicrossPuzzleOptionsGUI"
            android:label="@string/title_activity_picross_puzzle_options_gui"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".picross.PicrossImageSelectType"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".picross.PicrossPuzzleGUI"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_picross_puzzle_gui"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dottodot.DotToDotMainScreen"
            android:label="@string/app_name" />
        <activity
            android:name=".dottodot.DotToDotImageSelectType"
            android:label="@string/app_name" />
        <activity
            android:name=".dottodot.DotToDotPreviewAndWord"
            android:label="@string/app_name" />
        <activity
            android:name=".BallSwitch.BallSwitchPuzzleGame"
            android:label="BallSwitch Puzzle Main Menu" />
        <activity
            android:name=".dottodot.DotToDotView"
            android:label="@string/title_activity_dot_to_dot_view2"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".picross.PicrossCompleteScreen"
            android:label="@string/title_activity_picross_complete_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".picross.PicrossMainMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".picross.PicrossHelpPage"
            android:label="@string/title_activity_picross_help_page"
            android:parentActivityName=".picross.PicrossMainMenu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group.msci.puzzlegenerator.picross.PicrossMainMenu" />
        </activity>
        <activity
            android:name=".picross.PicrossScoreboard"
            android:label="@string/title_activity_picross_scoreboard"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
